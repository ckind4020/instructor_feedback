  <script>
    // Get instructor from URL
    const urlParams = new URLSearchParams(window.location.search);
    const instructor = urlParams.get('instructor') || 'your instructor';
    document.getElementById('question').textContent = `How was your drive with ${instructor}?`;

    function submitFeedback(rating) {
      // ‚úÖ You could log or POST this to a backend or Google Sheets
      const feedbackData = {
        instructor: instructor,
        rating: rating,
        timestamp: new Date().toISOString()
      };

      console.log('Feedback submitted:', feedbackData);

      // Optional: Send to Google Sheets / API here
      /*
      fetch('https://your-api-url.com', {
        method: 'POST',
        body: JSON.stringify(feedbackData),
        headers: {
          'Content-Type': 'application/json'
        }
      });
      */

      // Show thank you
      document.getElementById('thankYouMessage').style.display = 'block';
    }
  </script>

